# ═══════════════════════════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════════════════════════
DEBUG=false
SECRET_KEY=change_this_to_a_secure_random_string
APP_PORT=8001
APP_HOST=0.0.0.0

# ═══════════════════════════════════════════════════════════════════════════
# CORS — allowed frontend origins
# Comma-separated or JSON array.
# Development: all local Vite dev servers
# Production:  your actual domain(s)
# ═══════════════════════════════════════════════════════════════════════════
# Local dev (uncomment for development):
# CORS_ORIGINS=http://localhost:5173,http://localhost:3100,http://localhost:3101,http://localhost:3102
# Production:
CORS_ORIGINS=https://your-production-domain.com

# ═══════════════════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════════════════
# Leave empty to use SQLite locally.
# Heroku sets DATABASE_URL automatically for PostgreSQL.
DATABASE_URL=
DB_USE_POSTGRES=false

# ═══════════════════════════════════════════════════════════════════════════
# SMTP EMAIL (IONOS)
# ═══════════════════════════════════════════════════════════════════════════
SMTP_HOST=smtp.ionos.com
SMTP_PORT=465
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password_here
SMTP_FROM_EMAIL=your_email@example.com
SMTP_FROM_NAME=Your Company Name
SMTP_USE_TLS=false
SMTP_USE_SSL=true
EMAIL_TEST_MODE=false
